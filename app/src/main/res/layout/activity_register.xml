<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        android:id="@+id/tb_register"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone2"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_rgt_name"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:inputType="text"
            android:textColorHint="@color/login_hint_text"
            android:background="@null"
            android:padding="7dp"
            android:lines="1"
            android:textCursorDrawable="@drawable/cursor_style"

            android:hint="用户名..."
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/spilt_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/password2"
            />
        <EditText
            android:id="@+id/et_rgt_password"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_height="37dp"
            android:background="@null"
            android:padding="7dp"
            android:hint="密码.."
            android:textColorHint="@color/login_hint_text"
            android:lines="1"
            android:textCursorDrawable="@drawable/cursor_style"
            />
        <ImageView
            android:id="@+id/iv_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/psd_inv"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/spilt_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_num"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_rgt_phone"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:inputType="phone"
            android:textColorHint="@color/login_hint_text"
            android:background="@null"
            android:padding="7dp"
            android:lines="1"
            android:textCursorDrawable="@drawable/cursor_style"

            android:hint="手机号码..."
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/spilt_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="58dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/code"
            />
        <EditText
            android:id="@+id/et_rgt_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_height="37dp"
            android:background="@null"
            android:padding="7dp"
            android:hint="验证码.."
            android:textColorHint="@color/login_hint_text"
            android:lines="1"
            android:textCursorDrawable="@drawable/cursor_style"
            />
        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textSize="@dimen/login_text"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/btn_getcode_style"
            android:text="获取"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/spilt_line"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即视为同意"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/agreement"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rgt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/login_text"
        android:gravity="center"
        android:background="@drawable/btn_login_bg"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:text="注         册"
        />

</LinearLayout>